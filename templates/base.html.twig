<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Football App{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
		    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/css/jquery.dataTables.min.css" integrity="sha512-1k7mWiTNoyx2XtmI96o+hdjP8nn0f3Z2N4oF/9ZZRgijyV4omsKOXEnqL1gKQNPy2MTSP9rIEWGcH/CInulptA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
		    
			<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
			
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
			<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
		<div class="container-fluid">
			<div class="row">
				<div class="col-xl-12 col-lg-12 col-xs-12" >   
					<div class="card">
						<div class="card-header">Football App</div>
						<div class="card-body">
							<ul class="nav nav-tabs" id="myTab" role="tablist">
								<li class="nav-item" role="presentation"><a class="nav-link active" id="live-tab" href="/" role="tab" aria-selected="true">Football Teams</a></li>
								<li class="nav-item" role="presentation"><a class="nav-link" id="add-team-tab" href="/add-football-team" role="tab" aria-selected="true">Add Football Team</a></li> 
								<li class="nav-item" role="presentation"><a class="nav-link" id="sell-buy-tab" href="/sell-buy-player" role="tab" >Sell/Buy a Player</a></li>
						 
							</ul>
							<div class="tab-content" id="myTabContent">
								<div class="tab-pane fade  show active" id="live" role="tabpanel" aria-labelledby="live-tab">
									<div class="clearfix">&nbsp;</div>	
									<div class="row">
										<div class="col-xl-12 col-lg-12 col-xs-12" style="margin-bottom:30px;background-color: lightcyan; padding: 15px;">
										</div>
									</div>         
									<div class="row">
										<div class="col-xl-12 col-lg-12 col-xs-12">
											<h5>Football Teams</h5>
										</div>
									</div>
									<div class="row">
										<div class="col-xl-12 col-lg-12 col-xs-12">
											<table id="football_teams" class="table">
												<thead>
													<tr>
													{% for rep in repository %}
														<th>{{ rep.name }}</th> 
													{% endfor %}
													</tr>
												</thead>
												<tbody>	  
												{% for i in 0..numPlayers %}
													<tr id="row" value="">
													{% for key, value in teams %}
														{% if key is not same as(0) %}
															<td>{{ (value[i] is defined) ? value[i] : "-" }}</td>
														{% endif %}
													{% endfor %}
													</tr>
												{% endfor %} 
												</tbody>
											</table>
										</div>
									</div>  
								</div>	
							</div> 	
						</div> 	
					</div> 		
				</div> 
			</div> 
        </div>
		{% endblock %}
    </body>
	
	<script>
		$(document).ready(function() {
			var table = $('#football_teams').DataTable();
			//$("#alert").fadeOut(3700);
		});
	</script>
</html>
